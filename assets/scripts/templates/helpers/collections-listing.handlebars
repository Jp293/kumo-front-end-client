{{#each this as |collections|}}

  <div data-id="{{_id}}">
    <div class="card-body">
      <div class="">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">File Name</th>
              <th scope="col">File</th>
              <th scope="col">Tag</th>
              <th scope="col">Created At</th>
              <th scope="col">Updated At</th>
              <th scope="col">Download</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          {{#collections}}
          <tbody>
            <tr>
              <td>{{title}}</td>
              <td>{{key}}</td>
              <td>{{tag}}</td>
              <td>{{createdAt}}</td>
              <td>{{updatedAt}}</td>
              <td>
                <a href="{{url}}" target="_blank">Download</a>
              </td>
              <td>
                <form class="update-collection" data-id="{{_id}}" data-url="{{url}}" data-user="{{user}}">
                  <input name="image[title]" type="text" placeholder="New Title">
                  <input name="image[tag]" type="text" placeholder="Tag">
                  <input type="submit" value="Update">
                </form>
              </td>
              <td>
                <div class="delete-collection">
                  <button class="delete-collection" data-id="{{_id}}">
                    Delete collection
                  </button>
                </div>
              </td>
            </tr>
          </tbody>

          {{/collections}}
        </table>
      </div>

    </div>
  </div>

{{/each}}
